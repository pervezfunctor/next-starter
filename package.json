{
  "name": "next-starter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bulma": "0.8.0",
    "formik": "2.0.8",
    "fp-ts": "2.3.1",
    "io-ts": "2.0.2",
    "io-ts-types": "0.5.3",
    "monocle-ts": "2.0.0",
    "next": "9.3.2",
    "node-sass": "4.13.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2",
    "technoidentity-devfractal": "1.2.19",
    "technoidentity-utils": "1.2.19",
    "yup": "0.28.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@types/jest": "24.0.24",
    "@types/next": "9.0.0",
    "@types/node": "12.12.21",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/react-router-dom": "5.1.3",
    "@types/yup": "0.26.27",
    "@zeit/next-css": "1.0.1",
    "@zeit/next-sass": "1.0.1",
    "cross-env": "6.0.3",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "react-testing-library": "8.0.1",
    "rimraf": "3.0.0",
    "ts-jest": "24.2.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-immutable": "6.0.1",
    "tslint-react": "4.1.0",
    "typescript": "3.7.3",
    "typescript-tslint-plugin": "0.5.5"
  },
  "scripts": {
    "dev": "next start",
    "build": "next build",
    "start": "next",
    "clean": "rimraf dist .cache",
    "test": "cross-env NODE_EN='test' jest --passWithNoTests",
    "test:watch": "yarn test --watch",
    "lint": "yarn tslint -p . 'src/**/*.tsx' 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p .",
    "types:watch": "yarn types --watch",
    "validate": "yarn lint && yarn types && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
